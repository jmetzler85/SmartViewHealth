<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SmartViewHealth</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="https://cdn.jsdelivr.net/npm/pikaday/pikaday.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/pikaday/css/pikaday.css">

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div><a class="navbar-brand" href="#">SmartViewHealth</a></div>
        <div style="padding-left: 10px;"></div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">

                @using Microsoft.AspNet.Identity
                @if (Request.IsAuthenticated)
                {

                    <li class="nav-item">
                        <a class="nav-link" id="tabDashboards" href="/Admin/Index">Dashboards</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="tabHealthSystems" href="/Admin/HealthSystems">Health Systems</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="tabEquipmentLogging" href="/Admin/EquipmentLogging">Equipment Logging</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="tabReports" href="/Admin/Reports">Reports</a>
                    </li>
                }
                else
                {
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Features</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Pricing</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">About</a>
                    </li>
                }
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>


    <div class="container body-content">
        <br /><br />
        @RenderBody()
        <hr />
        <br /><br />
        <footer style="display: flex; justify-content: flex-end;">
            <p>&copy; @DateTime.Now.Year - SmartViewHealth</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
