@model List<SmartViewHealth.Models.Equipment_EC_Meds>

@if (Model.Count > 0)
{
    <ul class="list-group" style="margin: 5px;">
        @foreach (var item in Model)
        {
            <a href="javascript: ShowEditMedsModal('@item.Id', '@item.Med_Name', '@item.Med_UOI', '@item.Med_Qty', '@item.Med_exp_dt', '@item.row_sta_cd');" class="list-group-item list-group-item-action flex-column align-items-start">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@item.Med_Name</h5>
                    <small>Exp: @item.Med_exp_dt.ToString("MM/dd/yyyy")</small>
                </div>
                <small class="text-muted">Unit of Issue: @item.Med_UOI</small><br />
                <small class="text-muted">Qty: @item.Med_Qty</small>
            </a>
        }
    </ul>
}
else
{
    <h6 class="text-danger">There are currently no meds.</h6>
}